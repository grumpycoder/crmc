@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="HomeController as vm" ng-cloak>
    <h2>{{vm.title}}</h2>

    <div class="row">
        <div class="col-md-2">
            <span>Visitors Today {{vm.visitsTodayCount}}</span>
        </div>
        <div class="col-md-2">
            <span>Visitors This Month {{vm.visitsMonthCount}}</span>
        </div>
        <div class="col-md-2">
            <span>Visitors Today {{vm.totalVisits}}</span>
        </div>
    </div>
</div>