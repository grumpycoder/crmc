@using web.Helpers
<!DOCTYPE html>
<html ng-app="app" ng-cloak>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CRMC Administration</title>

    <!-- Ionicons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    @*<link rel="stylesheet" href="~/lib/AdminLTE/dist/css/AdminLTE.min.css">*@
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    @*<link rel="stylesheet" href="~/lib/AdminLTE/dist/css/skins/skin-black.min.css">*@

    <link href="~/css/vendor.min.css" rel="stylesheet" />
    <link href="~/css/site.min.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-black layout-top-nav">
    <div class="wrapper">

        <header class="main-header">
            <nav class="navbar navbar-inverse navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <a href="/" class="navbar-brand"><b>CRMC</b>Administration</a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.IconActionLink("fa fa-ban", "Censors", "Censors", "Home")</li>
                            <li>@Html.IconActionLink("fa fa-users", "People", "People", "Home")</li>
                            <li>@Html.IconActionLink("fa fa-cog", "Settings", "Settings", "Home")</li>
                            <li>@Html.IconActionLink("fa fa-group", "Users", "Users", "Home")</li>
                        </ul>
                        @*<form class="navbar-form navbar-left" role="search">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="navbar-search-input" placeholder="Search">
                                </div>
                            </form>*@
                    </div>
                    <!-- /.navbar-collapse -->
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">

                            <!-- User Account Menu -->
                            <li class="dropdown user user-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <!-- The user image in the navbar-->
                                    @*<img src="images/users/mark.lawrence.jpg" class="user-image" alt="User Image">*@
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                    <span class="hidden-xs">@(ViewData["FullName"])</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- The user image in the menu -->
                                    <li class="user-header">
                                        <gfl-text-avatar size="160" class="img-circle">@(ViewData["FullName"])</gfl-text-avatar>
                                    </li>
                                    <!-- Menu Body -->
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="~/profile" class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                        @if (Request.IsAuthenticated)
                                        {
                                            <div class="pull-right">
                                                @using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new { id = "logoutForm" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Sign out</a>
                                                }
                                            </div>
                                        }
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-custom-menu -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>

        <!-- Full Width Column -->
        <div class="content-wrapper">
            <div class="container">
                @RenderBody()
            </div>
            <!-- /.container -->
        </div>
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 2.0.0
                </div>
                <strong>Copyright &copy; @DateTime.Now.Year </strong>
            </div>
            <!-- /.container -->
        </footer>
    </div>
    <!-- Vendor Libraries -->
    <script src="~/js/vendor.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/signalr/hubs"></script>

    <!-- Bootstrapping -->
    @*<script src="~/app/all.min.js"></script>*@
    <script src="~/app/app.module.js"></script>

    <!-- core module -->
    <script src="~/app/core/core.module.js"></script>
    <script src="~/app/core/config.js"></script>
    <script src="~/app/services/service.module.js"></script>

    <!-- Reusable Blocks/Modules -->
    <script src="~/app/blocks/logger/logger.module.js"></script>
    <script src="~/app/blocks/logger/logger.js"></script>
    <script src="~/app/blocks/exception/exception.module.js"></script>
    <script src="~/app/blocks/exception/exception-handler.provider.js"></script>
    <script src="~/app/blocks/exception/exception.js"></script>
    <script src="~/app/filters/filter.module.js"></script>
    <script src="~/app/directives/smart-table.directive.js"></script>
    <script src="~/app/directives/clear-key.directive.js"></script>

    <script src="~/app/filters/app.filters.js"></script>
    <script src="~/app/services/censor.service.js"></script>
    <script src="~/app/services/people.service.js"></script>
    <script src="~/app/services/user.service.js"></script>
    <script src="~/app/services/configuration.service.js"></script>

    <!--home-->
    <script src="~/app/home/home.module.js"></script>
    <script src="~/app/home/home.js"></script>

    <!-- kiosk -->
    <script src="~/app/kiosk/kiosk.module.js"></script>
    <script src="~/app/kiosk/kiosk.js"></script>

    <!--censors-->
    <script src="~/app/censors/censors.module.js"></script>
    <script src="~/app/censors/censors.js"></script>

    <!--people-->
    <script src="~/app/people/people.module.js"></script>
    <script src="~/app/people/people.js"></script>

    <!--settings-->
    <script src="~/app/configuration/settings.module.js"></script>
    <script src="~/app/configuration/settings.js"></script>

    <!--users admin-->
    <script src="~/app/users/users.module.js"></script>
    <script src="~/app/users/users.js"></script>

    <!--users profile-->
    <script src="~/app/profile/profile.module.js"></script>
    <script src="~/app/profile/profile.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>